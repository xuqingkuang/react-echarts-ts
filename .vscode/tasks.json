{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "build",
      "args": ["run", "build"]
    },
    {
      "taskName": "lint",
      "args": ["run", "lint"]
    },
    {
      "taskName": "test",
      "args": ["run", "test"]
    },
    {
      "taskName": "clean",
      "args": ["run", "clean"]
    },
    {
      "taskName": "publish",
      "args": ["run", "publish"]
    }
  ]
}
